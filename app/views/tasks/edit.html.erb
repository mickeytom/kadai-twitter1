
<h1>task編集ページ</h1>
<% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @task, local: true) do |f| %>
  <%= f.label :content, 'content' %>
  <%= f.text_field :content %>
  <%= f.label :status, 'status' %>
  <%= f.text_field :status %>

  <%= f.submit '更新' %>
<% end %>

<%= link_to '一覧に戻る', "/" %>